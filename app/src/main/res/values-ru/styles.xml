<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorBg">@color/white</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryLight">@color/colorPrimaryLight</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimaryText">@color/colorPrimaryText</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>

    <style name="NightTheme" parent="AppTheme">
        <item name="colorBg">@color/gray</item>
        <item name="colorPrimary">@color/colorPrimaryNightTheme</item>
        <item name="colorPrimaryLight">@color/colorPrimaryLightNightTheme</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkNightTheme</item>
        <item name="colorPrimaryText">@color/colorPrimaryTextNightTheme</item>
        <item name="colorAccent">@color/colorAccentNightTheme</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>

</resources>
