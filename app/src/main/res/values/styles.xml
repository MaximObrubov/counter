<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>

    <style name="NightTheme" parent="ThemeOverlay.AppCompat.Dark">
        <item name="colorPrimary">@color/colorPrimaryNightTheme</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkNightTheme</item>
        <item name="colorAccent">@color/colorAccentNightTheme</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>

</resources>
